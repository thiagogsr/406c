val sonoff_device_ids = newArrayList("Sonoff")
val mqtt_actions = getActions("mqtt", "mqtt:bridge:rpi")

rule "Sonoff Maintenance"
when
    Item Sonoff_Action received command
then 
    logInfo("sonoff.rules", "Sonoff Maintenance on all devices: " + receivedCommand)
    for (String device_id : sonoff_device_ids) {
        switch (receivedCommand) {
            case "restart" :
                mqtt_actions.publishMQTT("cmnd/" + device_id + "/restart", "1") 
            case "status" :
                mqtt_actions.publishMQTT("cmnd/" + device_id + "/status", "2")
            case "upgrade" : {
                mqtt_actions.publishMQTT("cmnd/" + device_id + "/otaurl", "http://thehackbox.org/tasmota/release/sonoff.bin")
                mqtt_actions.publishMQTT("cmnd/" + device_id + "/upgrade", "1")
            }
        }
    }
    Sonoff_Action.postUpdate(NULL)
end
